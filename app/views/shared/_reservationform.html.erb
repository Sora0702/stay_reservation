<div class="container">
  <div class="Room-action">
    <%= link_to "前の画面に戻る", :back %>
    <% if current_user.id == @room.user_id %>
      <%= link_to "施設情報の編集", [:edit, @room] %>
    <% end %>
  </div>
  <div class="Room-container">
    <div class="Room-image-container">
      <% if @room.room_image.attached? %>
        <%= image_tag @room.room_image, alt: "施設画像", class: "Room-image" %>
      <% else %>
        <img src="/assets/default.room.png" alt="施設デフォルト画像" class="Room-image" >
      <% end %>
    </div>
    <div class="Room-reservation">
      <div class="Room-information">
        <ul>
          <li class="Room-name"><%= @room.room_name %></li>
          <li><%= "¥#{@room.price.to_s(:delimited)}~" %></li>
          <li><%= @room.address %></li>
          <li><%= @room.room_introduction %></li>
        </ul>
      </div>
      <%= form_with model: @reservation, url: :confirm, local: true do |f| %>
        <div class="Room-reservation-form">
          <ul>
            <li class="Requiredform"><%= f.label :check_in %></li>
            <li><%= f.date_field :check_in %></li>
            <li><%= render "shared/error", obj:@reservation, atr: :check_in %></li>
          </ul>
          <ul>
            <li class="Requiredform"><%= f.label :check_out %></li>
            <li><%= f.date_field :check_out %></li>
            <li><%= render "shared/error", obj:@reservation, atr: :check_out %></li>
          </ul>
          <ul>
            <li class="Requiredform"><%= f.label :number_of_people %>
            <li><%= f.text_field :number_of_people %>
            <li><%= render "shared/error", obj:@reservation, atr: :number_of_people %></li>
          </ul>
          <%= f.hidden_field :user_id, value: current_user.id %>
          <%= f.hidden_field :room_id, value: @room.id %>
        </div>
        <%= f.submit "予約する", class: "btn btn-primary Width-100" %>
      <% end %>
    </div>
  </div>
</div>