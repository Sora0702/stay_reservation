<div class="Firstview">
  <section class="container">
    <h2 class="Firstview-title">Potepan Shareで<br>まだ体験したことのない<br>旅をしよう</h2>
    <div class="Firstview-search">  
      <%= form_with url: :rooms , method: :get, local: true do |f| %>
        <%= f.text_field :area_keyword, placeholder: "エリアを入力してください", class: "form-control Form-margin" %>
        <%= f.submit '検索', name: nil , class: "btn btn-primary Width-100" %>
      <% end %>
    </div>
  </section>
</div>
<div class="container">
  <h3 class="Recommend">おすすめのエリア</h3>
  <div class="Recommend-areas">
    <%= link_to "Tokyo", rooms_path(area_keyword: "東京"), class: "Recommendarea Recommend-Tokyo" %>
    <%= link_to "Osaka", rooms_path(area_keyword: "大阪"), class: "Recommendarea Recommend-Osaka" %>
    <%= link_to "Kyoto", rooms_path(area_keyword: "京都"), class: "Recommendarea Recommend-Kyoto" %>
    <%= link_to "Sapporo", rooms_path(area_keyword: "札幌"), class: "Recommendarea Recommend-Sapporo" %>
  </div>
</div>
